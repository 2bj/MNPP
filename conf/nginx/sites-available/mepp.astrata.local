server {
    listen       80;
    server_name  mepp.astrata.local;
    root   /Applications/MEPP/htdocs/mepp;

    #charset koi8-r;

    access_log  /Applications/MEPP/logs/nginx/mepp.access.log;
    error_log  /Applications/MEPP/logs/nginx/mepp.access.log;
    
    location / {
        index  index.html index.htm index.php;
    }

    #error_page  404              /404.html;

    error_page   500 502 503 504  /50x.html;
    location = /50x.html {
        root   html;
    }
    
    include /Applications/MEPP/conf/nginx/common/php;
}